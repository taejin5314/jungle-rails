<h1>Login</h1><br/>

<%= form_tag '/login' do %>

  <div class='form-group'>
    <label>Email address</label><br/>
    <%= text_field_tag :email %>
  </div>

  <div class='form-group'>
    <label>Password</label><br/>
    <%= password_field_tag :password %>
  </div>

  <%= submit_tag "Submit", class: 'btn btn-info' %>

<% end %>